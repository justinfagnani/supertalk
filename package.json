{
  "name": "supertalk-monorepo",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "wireit",
    "test": "wireit",
    "test:node": "wireit",
    "test:browser": "wireit",
    "lint": "eslint packages/*/src/**/*.ts",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "ignore-sync": "ignore-sync ."
  },
  "wireit": {
    "build": {
      "dependencies": [
        "./packages/core:build",
        "./packages/supertalk:build"
      ]
    },
    "test": {
      "dependencies": [
        "./packages/core:test"
      ]
    },
    "test:node": {
      "dependencies": [
        "./packages/core:test:node"
      ]
    },
    "test:browser": {
      "dependencies": [
        "./packages/core:test:browser"
      ]
    }
  },
  "devDependencies": {
    "@eslint/compat": "^2.0.0",
    "@eslint/js": "^9.17.0",
    "@web/test-runner": "^0.19.0",
    "@web/test-runner-playwright": "^0.11.0",
    "eslint": "^9.17.0",
    "ignore-sync": "^8.0.0",
    "prettier": "^3.4.2",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.18.0",
    "wireit": "^0.14.10"
  },
  "packageManager": "npm@10.9.0",
  "engines": {
    "node": ">=20.0.0"
  }
}
